@import 'nib'

global-reset()

body
  margin 0
  padding 0
  font-family "Merriweather", Times, serif
  background-color #222

#pagewrapper
  width 970px
  margin 0 auto

#menu
  background-image url(/images/web-rebels-logo.png)
  background-position center 30px
  background-repeat no-repeat
  text-align center
  padding-top 280px
  padding-bottom 50px

  a
    display inline-block
    font-size 18px
    font-weight 400
    color #89894b
    background-color #1e1e1e
    text-decoration none
    border 1px solid #222222
    border-color #272727 #1e1e1e #1b1b1b
    border-radius 3px
    margin 0 20px 0 0
    padding 7px 7px 5px 7px

  a:hover
    color #f1f1eb
    background-color #131313
    border-color #252525 #131313 #000000
    box-shadow 0px 1px 4px rgba(0, 0, 0, 0.2)

div.wrapper
  width 970px
  border-top 1px solid #424224
  padding 30px 0 70px 0

div.left
  width 220px
  float left
  margin 0
  padding 0

  h1
    font-size 18px
    font-weight 600
    line-height 26px
    color #f1f1eb
    margin 0 0 18px 0
  
  p
    font-size 12px
    font-weight 400
    line-height 22px
    color #89894b
    border-bottom 1px solid #424224
    margin 0
    padding-bottom 30px
  
  ul
    list-style none
    margin 30px 0 0 0
    padding 0
    border none
  
  li
    margin 0 0 5px 0
  
    a
      display block
      padding 9px 7px 8px 7px
      background-color #1e1e1e
      color #89894b
      font-size 13px
      font-weight 400
      text-decoration none
      width 204px
      border 1px solid #1e1e1e
      border-color #272727 #1e1e1e #1b1b1b
      border-radius 3px
    
    a:hover
      background-color #131313
      color #f1f1eb
      border-color #252525 #131313 #000000

div.right
  width 720px
  float right
  margin 0
  padding 0

  p
    font-size 14px
    font-weight 300
    line-height 26px
    color #f1f1eb
    margin 0 0 18px 0

.imagebox
  background-color #131313
  float left
  padding 0 0 3px 0
  margin 0 30px 30px 0
  border-bottom 1px solid #000000
  border-radius 3px

  .rightbox
    margin 0 0 30px 0

p.header
  font-size 13px
  font-weight:300
  color #f1f1eb
  line-height 18px
  padding 0
  margin 8px 10px 4px 8px

p.subheader
  font-size 12px
  font-weight 300
  color #89894b
  line-height 15px
  padding 0
  margin 0 10px 3px 8px

table
  font-size 14px
  font-weight 300
  width 100%
  border-collapse collapse

tr.even
  background-color #1e1e1e
  color #f1f1eb

tr.odd
  background-color #222222
  color #f1f1eb

td
  padding 14px 9px
  vertical-align top

  .time
    font-size 12px
    font-weight 300
    color #f1f1eb
    width 100px
  
  .title
    font-size 14px
    font-weight 400
    color #f1f1eb
    padding-top 12px
    width 170px
  
  .additional
    font-size 12px
    font-weight 300
    line-height 22px
    color #89894b

